<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlayerNameStyle">
        <item name="android:textSize">@dimen/player_name_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/player_name_top_margin</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
        <item name="paddingEnd">@dimen/standard_padding</item>
        <item name="android:textSize">@dimen/player_property_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PropertyValueStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/standard_padding</item>
        <item name="android:textSize">@dimen/player_property_text_size</item>
    </style>

    <style name="PropertyRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/row_top_margin_standard</item>
        <item name="paddingStart">@dimen/standard_padding</item>
        <item name="paddingEnd">@dimen/standard_padding</item>

    </style>

</resources>